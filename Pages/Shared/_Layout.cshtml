<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechXpert</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" type="image/x-icon" href="/assets/favicon.ico">
    <script src="/JS/lottiefile.js"></script>
</head>
<body>
    <header class="landing-header">
        <div class="header-container-landing" id="landing-menu">
            <a href="/home.html">
                <img class="header-logo" src="~/assets/techxpert-logo 1.png" alt="logo">
            </a>
            <div class="upper-nav">
                <nav class="nav">
                    <ul>
                        <li><a asp-area="" asp-page="/Index">Home</a></li>
                        <li><a asp-area="" asp-page="/About">About</a></li>
                        <li><a asp-area="" asp-page="/Service">Services</a></li>
                        <li><a asp-area="" asp-page="/Contact">Contact</a></li>
                        <li><a href="#">Login</a></li>
                    </ul>
                </nav>
                <div class="raise-ticket">
                    <button class="raise-ticket-btn">Create free account</button>
                </div>
            </div>
            <div id="hamburger">
                <div id="menu-bar" class="">
                    <div id="bar1" class="bar"></div>
                    <div id="bar2" class="bar"></div>
                    <div id="bar3" class="bar"></div>
                </div>
            </div>
        </div>
        <div class="mobile-navigation" id="movnav">
            <div class="cross-mob d-none" id="cross">
                <img src="~/assets/crossmob.svg" width="20px" alt="cross" />
            </div>
            <nav class="nav-mob">
                <ul class="all-mob-nav d-none">
                    <li><a asp-area="" asp-page="/Index">Home</a></li>
                    <li><a asp-area="" asp-page="/About">About</a></li>
                    <li><a asp-area="" asp-page="/Service">Services</a></li>
                    <li><a asp-area="" asp-page="/Contact">Contact</a></li>
                    <li><a href="#">Login</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer-landing">
        <section class="footer-inner">
            <div class="footer-container">
                <div class="footer-logo">
                    <img src="~/assets/footerlogo.png" alt="footerLogo" style="mix-blend-mode: darken;" />
                    <p class="tag-line">Guidance and expert advice to help you make informed technology decisions.</p>
                </div>
                <div class="footer-link one">
                    <h4 class="section-title">COMPANY</h4>
                    <ul>                        
                        <li><a asp-area="" asp-page="/About">About</a></li>
                        <li><a asp-area="" asp-page="/Service">Services</a></li>
                        <li><a asp-area="" asp-page="/Career">Career</a></li>
                        <li><a asp-area="" asp-page="/Contact">Contact</a></li>                        
                    </ul>
                </div>
                <div class="footer-link two">
                    <h4 class="section-title">HELP</h4>
                    <ul>
                        <li><a href="#">Customer Support</a></li>
                        <li><a href="#">Login</a></li>
                        <li><a href="#">Terms & Conditions</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                    </ul>
                </div>
                <div class="footer-form">
                    <h4 class="section-title">GET IN TOUCH</h4>
                    <form>
                        <input type="text" class="form-input" placeholder="Enter your email address">
                        <input type="text" class="form-input" placeholder="Short Message">
                        <button class="form-submit-btn">Send Message</button>
                    </form>
                </div>
            </div>
            <div class="line"></div>
            <div class="copyright">© Copyright 2023, All Rights Reserved by TechXpert</div>
        </section>
    </footer>

    <script src="~/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>